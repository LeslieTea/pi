<%= render 'shared/content_title', title: "New Category" %>


<div class='well'>
  <%= form_for @category do |f| %>
    <div class='control-group'>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div>
    <%= f.submit "Create Category", class: 'btn btn-success' %>
    </div>
  <% end %>
</div>